{
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "3.0.0-alpha.0",
    "packages": [
        "packages/*"
    ],
    "command": {
        "publish": {
            "conventionalCommits": true
        },
        "version": {
            "conventionalCommits": true,
            "allowBranch": [
                "main",
                "release"
            ]
        }
    },
    "changelog": {
        "ignoreCommitters": [
            "allcontributors"
        ],
        "labels": {
            "feature": "Features",
            "bug": "Bug Fixes",
            "enhancement": "Enhancements",
            "documentation": "Documentation",
            "internal": "Internal"
        }
   }
}
