<screen>
  <page>
    <centered>
      <vbox xs="11">
        <hbox justify="center">
          <h1>Flexi</h1>
        </hbox>
        <hbox justify="center">
          <h2>Fantastically Fresh Flexbox for Ember</h2>
        </hbox>
        <grid>
          <centered xs="12" sm="6" md="3">
            {{#link-to 'sidebar' class="layout-mock"}}
              <img src="fixed-left.svg" alt="grid">
              <box class="text-center">Sidebar</box>
            {{/link-to}}
          </centered>
          <centered xs="12" sm="6" md="3">
            {{#link-to 'top-nav' class="layout-mock"}}
              <img src="fixed-left-with-top-nav.svg" alt="grid">
              <box class="text-center">Top Nav</box>
            {{/link-to}}
          </centered>
          <centered xs="12" sm="6" md="3">
            {{#link-to 'tabs' class="layout-mock"}}
              <img src="grid.svg" alt="grid">
              <box class="text-center">Tabs</box>
            {{/link-to}}
          </centered>
          <centered xs="12" sm="6" md="3">
            {{#link-to 'header-footer-with-scroll' class="layout-mock"}}
              <img src="fixed-left-with-top-nav.svg" alt="grid">
              <box class="text-center">Header + Footer w/ Scroll</box>
            {{/link-to}}
          </centered>
          <centered xs="12" sm="6" md="3">
            {{#link-to 'grid' class="layout-mock"}}
              <img src="grid.svg" alt="grid">
              <box class="text-center">Grid</box>
            {{/link-to}}
          </centered>
          <centered xs="12" sm="6" md="3">
            {{#link-to 'grid-responsive' class="layout-mock"}}
              <img src="grid.svg" alt="grid">
              <box class="text-center">Grid + Responsive</box>
            {{/link-to}}
          </centered>
          <centered xs="12" sm="6" md="3">
            {{#link-to 'grid-rows' class="layout-mock"}}
              <img src="grid.svg" alt="grid">
              <box class="text-center">Grid w/rows</box>
            {{/link-to}}
          </centered>
          <centered xs="12" sm="6" md="3">
            {{#link-to 'grid-rows-responsive' class="layout-mock"}}
              <img src="grid.svg" alt="grid">
              <box class="text-center">Grid w/rows + Responsive</box>
            {{/link-to}}
          </centered>
        </grid>
      </vbox>
    </centered>
  </page>
</screen>
