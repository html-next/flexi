<box xs="10" class="offset-xs-1">
  <box justify="around" fit>
    <hbox fit>
      <h1>Blueprints</h1>
      <hbox align="center" justify="end">
        <span>Next <LinkTo @route="docs.settings">Configuration</LinkTo></span>
      </hbox>
    </hbox>

    <box fit>
      <strong>Generate Config:</strong>
      {{#let (get-code-snippet "generate-1.js") as |snippet|}}
        <pre class={{snippet.language}}>{{snippet.source}}</pre>
      {{/let}}
    </box>

    <box fit>
      <strong>Generate a layout:</strong>
      {{#let (get-code-snippet "generate-2.js") as |snippet|}}
        <pre class={{snippet.language}}>{{snippet.source}}</pre>
      {{/let}}
    </box>

